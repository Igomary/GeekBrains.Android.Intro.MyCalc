<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="MyStyle_Buttons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/btnTxtColor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyStyle_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_text</item>
        <item name="android:background">@color/textViewBGColor</item>
        <item name="android:textColor">@color/textViewTextColor</item>
    </style>
</resources>